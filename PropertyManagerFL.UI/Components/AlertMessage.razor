@using PropertyManagerFL.Application.Shared.Enums;

@if (!string.IsNullOrWhiteSpace(Message))
{
    <div class="alert @alertClass">@Message <span @onclick="HideMessage"></span></div>
}

@code {
    [Parameter]
    public string Message { get; set; }

    private AppDefinitions.AlertMessageType messageType;

    [Parameter]
    public AppDefinitions.AlertMessageType MessageType
    {
        get => messageType;
        set
        {
            messageType = value;
            switch (messageType)
            {
                case AppDefinitions.AlertMessageType.Error:
                    alertClass = "alert-danger";
                    break;
                case AppDefinitions.AlertMessageType.Warning:
                    alertClass = "alert-warning";
                    break;
                case AppDefinitions.AlertMessageType.Success:
                    alertClass = "alert-success";
                    break;
                case AppDefinitions.AlertMessageType.Info:
                    alertClass = "alert-info";
                    break;
                default:
                    alertClass = "alert-danger";
                    break;
            }
        }       
    }

    protected string alertClass { get; set; } = "alert-info";

    void HideMessage()
    {
        Message = string.Empty;
    }
}
