@*@attribute [Authorize(Roles = "Admin")]*@
@using PropertyManagerFL.UI.Components.Cards


<div class="cards">
    <div class="table-card">
        <LookupTableCard cardContent="@L["MSG_EstadoCivil"]" CardType="card-1"
                         CardSymbol="fas fa-user-group" cardTitle="@EstadoCivilTitle" tableParam="EstadoCivil"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@EstadoConservacaoTitle" CardType="card-2 card"
                         CardSymbol="fas fa-battery-half" cardTitle="@EstadoConservacaoTitle" tableParam="EstadoConservacao"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="Tabela de Formas de Pagamento" CardType="card-3"
                         CardSymbol="fas fa-credit-card" cardTitle="@FormaPagamentoTitle" tableParam="FormaPagamento"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="Situação da Fração" CardType="card-1"
                         CardSymbol="fas fa-square-plus" cardTitle="@SituacaoFracaoTitle" tableParam="SituacaoFracao"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@TipoContactoTitle" CardType="card-2"
                         CardSymbol="fas fa-address-card" cardTitle="@TipoContactoTitle" tableParam="TipoContacto"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@CategoriaDespesaTitle" CardType="card-3"
                         CardSymbol="fas fa-layer-group" cardTitle="@CategoriaDespesaTitle" tableParam="CategoriaDespesa"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@TipologiaFracaoTitle" CardType="card-1"
                         CardSymbol="fas fa-igloo" cardTitle="@TipologiaFracaoTitle" tableParam="TipologiaFracao"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="Tipo de Propriedade" CardType="card-2"
                         CardSymbol="fas fa-house-user" cardTitle="@TipoPropriedadeTitle" tableParam="TipoPropriedade"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="Tipo de Recebimento" CardType="card-4"
                         CardSymbol="fa-regular fa-money-bill-1" cardTitle="@TipoRecebimentoTitle" tableParam="TipoRecebimento"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="Certificados Energéticos" CardType="card-5"
                         CardSymbol="fa-regular fa-lightbulb" cardTitle="@TipoCertificadoEnergeticoTitle" tableParam="TipoCertificadoEnergetico"></LookupTableCard>
    </div>
</div>

@code {
    [Inject]
    public IStringLocalizer<App> L { get; set; }

    private string? EstadoCivilTitle;
    private string? EstadoConservacaoTitle;
    private string? FormaPagamentoTitle;
    private string? SituacaoFracaoTitle;
    private string? TipoContactoTitle;
    private string? CategoriaDespesaTitle;
    private string? TipologiaFracaoTitle;
    private string? TipoPropriedadeTitle;
    private string? TipoRecebimentoTitle;
    private string? TipoCertificadoEnergeticoTitle;

    protected override void OnInitialized()
    {
        EstadoCivilTitle = L["MSG_EstadoCivil"];
        EstadoConservacaoTitle = L["TituloEstadoConservacao"];
        FormaPagamentoTitle = L["TituloTipoPagamento"];
        SituacaoFracaoTitle = L["TituloSituacaoFracao"];
        TipoContactoTitle = L["TituloTipoContacto"];
        CategoriaDespesaTitle = L["TituloCategoriaDespesa"];
        TipologiaFracaoTitle = L["TituloTipologia"];
        TipoPropriedadeTitle = L["TituloTipoPropriedade"];
        TipoRecebimentoTitle = L["TituloTipoRecebimento"];
        TipoCertificadoEnergeticoTitle = L["TituloCertificacaoEnergetica"];
    }
}
