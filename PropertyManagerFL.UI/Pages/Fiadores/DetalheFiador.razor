<div class="card back">
    <div class="yellow"></div>
    <div class="top dots"></div>
    <div class="personal-info">
        <p>@SelectedFiador!.Nome</p>
        <p>@SelectedFiador!.Morada.</p>
        <p>@SelectedFiador!.Contacto1</p>
        <p>@SelectedFiador!.eMail</p>
        <p>@SelectedFiador.Notas</p>
    </div>
    <div class="bottom dots"></div>
    <div class="pink"></div>
    <div>
        <SfButton CssClass="e-primary e-round-corner" IconCss="fas fa-edit"
                  @onclick="EditFiadorClick" Content="Editar">
        </SfButton>
    </div>
