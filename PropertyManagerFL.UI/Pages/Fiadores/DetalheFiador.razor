@code {
    [Parameter] public FiadorVM SelectedFiador { get; set; }

    [Parameter] public EventCallback<int> OnFiadorEdit { get; set; }
    [Parameter] public EventCallback OnFiadorExit { get; set; }

    protected override Task OnParametersSetAsync()
    {
        return base.OnParametersSetAsync();
    }

    protected void EditFiadorClick()
    {
        OnFiadorEdit.InvokeAsync(SelectedFiador.Id);
    }
}
